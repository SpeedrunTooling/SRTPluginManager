<UserControl
    x:Class="SRTPluginManager.MVVM.View.PluginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SRTPluginManager.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1700"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="ScrollBar">
            <Setter Property="Opacity" Value="0" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Fonts/#Teko" />
        </Style>
    </UserControl.Resources>
    <!--  Container  -->
    <StackPanel Loaded="StackPanel_Loaded">
        <!--  Header  -->
        <!--  Header  -->
        <StackPanel Height="60" Orientation="Horizontal">
            <Image Margin="10" Source="/Images/Plugins.png" />
            <TextBlock
                Margin="10,10,0,10"
                HorizontalAlignment="Left"
                FontSize="28"
                FontWeight="Bold"
                Foreground="White"
                Text="Plugin Manager" />
        </StackPanel>

        <!--  Middle Container  -->
        <StackPanel Orientation="Horizontal">
            <Grid Width="1700" Height="940">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="530" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="180" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!--  Plugin Info Container  -->
                <Border Margin="15,13,15,13" CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0" Color="#151527" />
                            <GradientStop Offset="1" Color="#1D1C2E" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel>
                            <TextBlock
                                Margin="20,10,10,0"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Current Plugin" />
                            <TextBlock
                                x:Name="PluginName"
                                Margin="20,0,10,0"
                                FontSize="18"
                                Foreground="White"
                                Text=""
                                TextWrapping="Wrap" />
                            <Grid Width="500" Height="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border
                                    Width="230"
                                    Margin="10"
                                    Background="#272537"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="10,10,10,0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Current Version" />
                                        <TextBlock
                                            x:Name="CurrentRelease"
                                            Margin="20,10,10,0"
                                            FontSize="18"
                                            Foreground="White"
                                            Text=""
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    Width="230"
                                    Margin="10"
                                    Background="#272537"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="10,10,10,0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Latest Plugin" />
                                        <TextBlock
                                            x:Name="LatestRelease"
                                            Margin="20,10,10,0"
                                            FontSize="18"
                                            Foreground="White"
                                            Text=""
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Options  -->
                <Border
                    Grid.Row="1"
                    Margin="15,13,15,13"
                    CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0" Color="#151527" />
                            <GradientStop Offset="1" Color="#1D1C2E" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel>
                            <TextBlock
                                Margin="20,10,10,0"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Options" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <Button
                                    x:Name="SetCurrent"
                                    Grid.ColumnSpan="2"
                                    Margin="5"
                                    Click="SetCurrent_Click"
                                    Command="{Binding LogsViewCommand}"
                                    Content="Start SRT"
                                    FontFamily="/Fonts/#Teko"
                                    FontSize="30"
                                    Foreground="White"
                                    Style="{StaticResource ButtonTheme}"
                                    Visibility="Collapsed" />

                                <Button
                                    x:Name="GetUpdate"
                                    Grid.ColumnSpan="2"
                                    Margin="5"
                                    Click="GetUpdate_Click"
                                    Content="Install"
                                    FontFamily="/Fonts/#Teko"
                                    FontSize="30"
                                    Foreground="White"
                                    Style="{StaticResource ButtonTheme}" />

                                <TextBlock
                                    x:Name="UpdateProgressBar"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="White"
                                    Text="Test" />
                            </Grid>

                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Available Plugin List  -->
                <Border
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="15,13,15,13"
                    CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0" Color="#151527" />
                            <GradientStop Offset="1" Color="#1D1C2E" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock
                                Margin="20,10,10,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Available Plugins" />
                        </StackPanel>

                        <ScrollViewer Grid.Row="1">
                            <StackPanel>
                                <RadioButton
                                    x:Name="ResidentEvil1"
                                    Height="50"
                                    Click="ResidentEvil1_Click"
                                    Content="Resident Evil 1 Classic"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="True"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE1Cmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil1HD"
                                    Height="50"
                                    Click="ResidentEvil1HD_Click"
                                    Content="Resident Evil 1 HD"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE1RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil2"
                                    Height="50"
                                    Click="ResidentEvil2_Click"
                                    Content="Resident Evil 2 Classic"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2Cmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil2Remake"
                                    Height="50"
                                    Click="ResidentEvil2Remake_Click"
                                    Content="Resident Evil 2 Remake"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil3"
                                    Height="50"
                                    Click="ResidentEvil3_Click"
                                    Content="Resident Evil 3 Classic"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2Cmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil3Remake"
                                    Height="50"
                                    Click="ResidentEvil3Remake_Click"
                                    Content="Resident Evil 3 Remake"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil4"
                                    Height="50"
                                    Click="ResidentEvil4_Click"
                                    Content="Resident Evil 4"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil5"
                                    Height="50"
                                    Click="ResidentEvil5_Click"
                                    Content="Resident Evil 5"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil6"
                                    Height="50"
                                    Click="ResidentEvil6_Click"
                                    Content="Resident Evil 6"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil7"
                                    Height="50"
                                    Click="ResidentEvil7_Click"
                                    Content="Resident Evil 7"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->

                                <RadioButton
                                    x:Name="ResidentEvil8"
                                    Height="50"
                                    Click="ResidentEvil8_Click"
                                    Content="Resident Evil 8: Village"
                                    FontSize="16"
                                    Foreground="White"
                                    IsChecked="False"
                                    Style="{StaticResource PluginButtonTheme}" />
                                <!--  Command="{Binding RE2RCmd}"  -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="15,13,15,13"
                    CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.0" Color="#151527" />
                            <GradientStop Offset="1" Color="#1D1C2E" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock
                            Margin="20,10,10,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Logs" />
                        <Border
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Height="470"
                            Margin="15,0,15,13"
                            Background="#22202F"
                            CornerRadius="10">
                            <ScrollViewer CanContentScroll="True">
                                <TextBlock
                                    x:Name="ConsoleBox"
                                    Margin="10,10,-5,10"
                                    FontFamily="Consolas"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="SRT Host v2.4.4 32-bit (x86)&#10; --------------------------------------------------&#10;   Loaded host: SRTHost32.dll&#10;         Digitally signed but NOT verified: Travis J Gutjahr [Thumbprint: 38028F54E06C3CECF8CE307D8EFA24D2258A7CE0]&#10;   Loaded plugin: plugins\SRTPluginProviderRE1C\SRTPluginProviderRE1C.dll&#10;         No digital signature found.&#10;   Loaded plugin: plugins\SRTPluginUIJSON\SRTPluginUIJSON.dll&#10;         Digitally signed but NOT verified: Travis J Gutjahr [Thumbprint: 38028F54E06C3CECF8CE307D8EFA24D2258A7CE0]&#10;   Loaded plugin: plugins\SRTPluginWebSocket\SRTPluginWebSocket.dll&#10;         No digital signature found.&#10; &#10; ddraw&#10; [Game Memory Provider (Resident Evil 1 Classic) v1.0.2.0] successfully started.&#10; [JSON Web Server v2.3.2.0] successfully started.&#10; [Websocket Relay v1.0.0.0] successfully started.&#10; Press CTRL+C in this console window to shutdown the SRT.&#10; Hosting environment: Development&#10; Content root path: C:\Users\VGR_T\Desktop\SRT&#10; Now listening on: http://[::]:7190&#10; Now listening on: http://0.0.0.0:7190&#10; Application started. Press Ctrl+C to shut down.&#10;"
                                    TextWrapping="Wrap" />
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
